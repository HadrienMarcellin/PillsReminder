<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewPainActivity">

    <LinearLayout
        android:layout_margin="@dimen/default_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <!-- Date and Time -->

        <TextView
            android:id="@+id/textView"
            android:textSize="@dimen/default_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day and time :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_pain_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date"
                android:fontFamily="sans-serif-light"
                android:hint="Date" />

            <EditText
                android:id="@+id/new_pain_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time"
                android:fontFamily="sans-serif-light"
                android:hint="Time" />
        </LinearLayout>

        <!--  Pain Level -->
        <TextView
            android:layout_marginTop="@dimen/default_margin"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="Pain level  :" />

        <LinearLayout
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/new_pain_minus"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/minus" />

            <TextView
                android:id="@+id/new_pain_level"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin" />

            <ImageView
                android:id="@+id/new_pain_plus"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/plus" />

        </LinearLayout>


        <!-- Check Box Surge-->
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/new_pain_long_duration"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="Surge" />

<!--   Save button -->
        <Button
            android:id="@+id/new_pain_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@color/colorPrimary"
            android:text="@string/button_save"
            android:textColor="@color/buttonLabel" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>