<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginBottom="@dimen/small_margin"
    tools:context=".fragments.PillFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:background="#6A4A4D5A">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_pill"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:src="@drawable/pill_red" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_date_pill_item"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_padding"
                android:text="TextView"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:id="@+id/textView_time_pill_item"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:paddingLeft="@dimen/default_padding"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textSize="@dimen/small_text_size"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_description_pill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:paddingLeft="@dimen/default_margin"
            android:text="@string/app_name"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/imageDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>
